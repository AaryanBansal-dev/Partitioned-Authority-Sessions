# PAN API Server Configuration
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=8080
NODE_ENV=production

# HTTPS Configuration (set to true for production with SSL)
HTTPS_ENABLED=true

# Session Configuration
SESSION_TTL=86400

# CORS Configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://example.com,https://www.example.com

# Redis Configuration (optional - falls back to in-memory if not configured)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-password-here
REDIS_DB=0

# Rate Limiting (requests per minute)
NONCE_RATE_LIMIT=30
LOGIN_RATE_LIMIT=10

# Debugging (set to true to enable debug logs in production)
DEBUG=false
